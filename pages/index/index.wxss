.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.dice-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 50rpx;
  padding: 20rpx;
  flex-wrap: wrap;
  max-width: 600rpx;
}

.dice {
  width: 140rpx;
  height: 140rpx;
}

.button-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
}

.roll-button {
  background-color: #007AFF;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 10rpx;
}

.switch-button {
  background-color: #34C759;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 10rpx;
}

.shake {
  animation: shake 0.5s infinite;
}

@keyframes shake {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  50% { transform: rotate(0deg); }
  75% { transform: rotate(10deg); }
  100% { transform: rotate(0deg); }
}
